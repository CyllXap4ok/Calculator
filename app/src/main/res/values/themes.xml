<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Calculator" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/dark_background_tint</item>
        <item name="colorPrimaryVariant">@color/dark_background_tint</item>
    </style>

    <style name="numButton">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:insetLeft">14dp</item>
        <item name="android:insetRight">14dp</item>
        <item name="android:insetTop">8dp</item>
        <item name="android:insetBottom">8dp</item>
        <item name="android:textSize">34sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:backgroundTint">@color/background_tint</item>
    </style>

    <style name="Theme.Calculator" parent="Base.Theme.Calculator" />
</resources>